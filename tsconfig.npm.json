{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
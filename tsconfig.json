{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*"
      ],
    },
    "module": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // STRICTNESS
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "old"
  ]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@chacomat/*": [
        "src/*"
      ]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "dist",
    "test",
    "jest.config.ts"
  ]
}
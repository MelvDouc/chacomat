{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": [
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node16",
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./dist",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}